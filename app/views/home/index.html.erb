<div class="row">
  <div class="col s12 m12 l12 Search_course z-depth-1 valign-wrapper">
    <div class="valign center Search_course__text_field__wrap input-field">
        <!-- <h1>Potato</h1> -->
        <p class="Home__logo--main">Potato</p>
        <p class="Home__logo--sub">先輩から教科書を授かろう！</p>
        <%= form_tag courses_path, method: :get do %>
        <label for="search_course_field2"></label>
          <%= text_field_tag :course_name, "", class: "validate", id: "search_course_field2", placeholder:"出品/購入も授業名で検索" %>
          <div id="course_result2">
          </div>
        <%= submit_tag "検索", class:"btn home_btn"  %>
        <% end %>
        <% unless user_signed_in? %>
          <div class="valign center Home__login_btn">
            <div id="social-icon"class="clear">
              <%= link_to user_google_oauth2_omniauth_authorize_path do %>
                <i class="fa fa-google fa-lg"></i>大学メールでログイン
              <% end %>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
