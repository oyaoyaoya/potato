<h5 class="amber-text accent-4">授業 / 書籍名で検索</h5>
<div class="row">
  <div class="col s12 m12 l12">
    <%= form_tag courses_path, method: :get do |f| %>
      <div class="input-field col s12">
        <%= text_field_tag(:course_name) %>
        <label>授業名</label>
      </div>
      <div class="input-field col s12">
        <%= text_field_tag(:textbook_name) %>
        <label>教科書名</label>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">検索
        <i class="material-icons right">search</i>
      </button>
    <% end %>
  </div>
</div>
