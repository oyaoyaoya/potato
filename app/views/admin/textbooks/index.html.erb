<p id="notice"><%= notice %></p>

<h1>テキスト一覧</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_textbooks.each do |admin_textbook| %>
      <tr>
        <td><%= admin_textbook.name %></td>
        <td><%= link_to 'Show', admin_textbook_path(admin_textbook) %></td>
        <td><%= link_to 'Edit', edit_admin_textbook_path(admin_textbook) %></td>
        <td><%= link_to 'Destroy', admin_textbook_path(admin_textbook), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render partial: "shared/pagination", locals: { params: @admin_textbooks} %>

<br>

<%= link_to 'New Admin Textbook', new_admin_textbook_path %>
