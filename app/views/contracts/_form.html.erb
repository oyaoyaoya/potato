<div class="row">
  <%= form_for(@message, url: { controller: "messages", action: "create"}, html: { id: "message_form"}) do |f| %>
  <%= f.hidden_field :contract_id %>
  <div class="col s12 m11 l11">
    <%= f.text_area :body, id: "message_field" , class:"materialize-textarea"%>
  </div>
  <div class="col s12 m1 l1">
    <%= f.submit "送信する", class:"waves-effect waves-light btn btn_vr_center btn_vr_center--contract" %>
  </div>
  <% end %>
</div>
