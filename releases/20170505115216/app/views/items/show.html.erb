<h4>出品詳細</h4>
<div clss="row">
  <div class="col s12 m12 l12 Course__show__item_show">
    <div class="Course__show">
      <h5 class="truncate"><i class="material-icons">mode_edit</i><%= @item.course.day_i18n[0] %>:<%= @item.course.period_i18n[0] %>-<%= @item.course.name %></h5>
      <hr>
      <div class="row">
        <div class="col s12 m3 l3 Course__show__item_show--img">
          <thead></thead>
          <div class="center">
            <%= image_tag("textbook.jpg", class: "text-img-12") %>
          </div>
        </div>
        <div class="col s12 m9 l9 Course__show__item_show--description">
          <table class="bordered truncate">
            <thead></thead>
            <tbody>
              <tr>
              <th>書籍名</th>
              <td><%= @item.textbook.name %></td>
              </tr>
              <tr>
              <th>価格</th>
              <td><%= @item.price %>円</td>
              </tr>
              <tr>
              <th>保存状態</th>
              <td><%= @item.status_i18n %></td>
              </tr>
              <tr>
              <th>公開状態</th>
              <td><%= @item.published ? "公開" : "非公開" %></td>
              </tr>
              <tr>
                <th>Amazon</th>
                <td><%= link_to "ページに飛ぶ", "https://www.amazon.co.jp/s/ref=sr_nr_n_0?fst=as%3Aoff&keywords=#{@item.name}+#{@item.textbook.publisher}&ie=UTF8&qid=1491317462&rnid=2321267051", target: ["_blank"] %></td>
              </tr>
            </tbody>
          </table>
          <div class="right-align">
            <p>by Google Books</p>
          </div>
        </div>
      </div>
      <div class="row">
        <!-- <div class="col s12 m12 l12 Course__show__item_show--list"> -->
          <div class="col s12 s12 m6 l6">
            <% if user_signed_in? %>
              <%= render partial: 'shared/item_show_private', locals: {item: @item, item_type: @item_type} %>
            <% else %>
              <%= render partial: "shared/item_show_public", locals: {item: @item, item_type: @item_type} %>
              <%# render partial: "shared/text_items", locals: { course: @course, size: "12"} %>
            <% end %>
          </div>
          <div class="col s12 m6 l6 Course__show__item_show--link">
            <%= link_to "アイテム一覧", course_path(@item.course.id), class:"back_link waves-effect waves-light btn white blue-text text-darken-2" %>
          </div>
        <!-- </div> -->
      </div>
    </div>
  </div>
</div>

<%# if current_page?(controller: "course", action: "index") %>
